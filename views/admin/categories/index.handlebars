
<h1>Create Category</h1>
<div class="row">
    <div class="col-sm-4">
        <form action="admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Category Name:</label>
                <input type="text" name="name" class="form-control"placeholder="Enter Title">
            </div>
            <button class="btn btn-primary">Create Category</button>    
        </form>   
    </div>
</div>
<br>
<hr>

    <div class="row">
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info" >Edit</a></td>
                    <td>
                        <form action="admin/categories/{{id}}?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>